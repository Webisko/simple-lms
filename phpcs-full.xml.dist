<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Simple LMS (Full Audit)" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">

	<description>PHPCS full-audit configuration for Simple LMS plugin (may report a large number of legacy/style violations).</description>

	<!-- What to scan -->
	<file>.</file>

	<!-- Exclude patterns -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*/assets/*</exclude-pattern>
	<exclude-pattern>*/languages/*</exclude-pattern>
	<exclude-pattern>*/.stubs/*</exclude-pattern>
	<exclude-pattern>rebuild-po-files.php</exclude-pattern>
	<exclude-pattern>debug-language.php</exclude-pattern>
	<exclude-pattern>extend-po-files.php</exclude-pattern>

	<!-- How to scan -->
	<arg value="sp"/> <!-- Show sniff and progress -->
	<arg name="basepath" value="."/>
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/>

	<!-- Rules: WordPress Coding Standards -->
	<rule ref="WordPress-Core"/>
	<rule ref="WordPress-Extra"/>
	<rule ref="WordPress-Docs"/>

	<!-- Don't enforce LF-only line endings (Windows dev environment uses CRLF) -->
	<rule ref="Generic.Files.LineEndings.InvalidEOLChar">
		<severity>0</severity>
	</rule>

	<!-- WordPress plugins commonly have bootstrap side effects; don't fail builds on this -->
	<rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
		<severity>0</severity>
	</rule>

	<!-- Line length limits are style-only; do not fail builds on them -->
	<rule ref="Generic.Files.LineLength.TooLong">
		<severity>0</severity>
	</rule>

	<!-- Reduce noise from legacy formatting; focus on functional issues first -->
	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent">
		<severity>0</severity>
	</rule>
	<rule ref="Universal.Arrays.DisallowShortArraySyntax">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.PHP.YodaConditions.NotYoda">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.NamingConventions.ValidFunctionName.MethodNameInvalid">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.NamingConventions.ValidFunctionName.FunctionNameInvalid">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.NamingConventions.ValidVariableName.VariableNotSnakeCase">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.NamingConventions.ValidVariableName.PropertyNotSnakeCase">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.NamingConventions.ValidVariableName.UsedPropertyNotSnakeCase">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.Arrays.MultipleStatementAlignment">
		<severity>0</severity>
	</rule>
	<rule ref="Generic.Formatting.MultipleStatementAlignment.NotSameWarning">
		<severity>0</severity>
	</rule>
	<rule ref="PSR1.Classes.ClassDeclaration.MultipleClasses">
		<severity>0</severity>
	</rule>

	<!-- Check for PHP cross-version compatibility -->
	<config name="testVersion" value="8.0-"/>
	<rule ref="PHPCompatibilityWP"/>

	<!-- Text domain check -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="simple-lms"/>
			</property>
		</properties>
	</rule>

	<!-- Prefix check for global namespace pollution -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="simple_lms"/>
				<element value="SimpleLMS"/>
			</property>
		</properties>
	</rule>

	<!-- Minimum supported WordPress version -->
	<config name="minimum_supported_wp_version" value="6.4"/>

</ruleset>
