{
    "name": "webisko/simple-lms",
    "description": "LMS plugin for managing courses, modules, and lessons with WooCommerce integration",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Filip Meyer-LÃ¼ters",
            "email": "kontakt@webisko.pl",
            "homepage": "https://webisko.pl"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "yoast/phpunit-polyfills": "^2.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "classmap": [
            "../includes/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleLMS\\Tests\\": "./"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --testsuite \"Unit Tests\" --coverage-html coverage --coverage-clover coverage/clover.xml",
        "phpcs": "phpcs --standard=WordPress includes/ simple-lms.php",
        "phpstan": "phpstan analyse --level=5 includes/ simple-lms.php",
        "check": [
            "@phpcs",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
