<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap-wordpress.php"
         colors="true"
         cacheResult="false"
         stopOnFailure="false"
         failOnWarning="false"
         failOnRisky="false">
    <testsuites>
        <testsuite name="Simple LMS Integration Tests">
            <directory suffix="Test.php">tests/WPIntegration</directory>
        </testsuite>
    </testsuites>
    <coverage>
        <include>
            <directory suffix=".php">includes</directory>
        </include>
        <exclude>
            <directory>includes/elementor-dynamic-tags/widgets</directory>
            <directory>includes/bricks/elements</directory>
        </exclude>
    </coverage>
    <php>
        <!-- Use the wp-env WordPress runtime (wp-load.php fallback in tests/bootstrap-wordpress.php). -->
        <env name="WP_CORE_DIR" value="/var/www/html"/>
    </php>
</phpunit>
