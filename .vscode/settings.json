{
  "github.copilot.enable": {
    "*": true,
    "plaintext": false
  },
  "php.validate.enable": false,
  "php.suggest.basic": false,
  "php.validate.run": "onSave",
  "[php]": {
    "editor.defaultFormatter": "esbenp.prettier-php",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.acceptSuggestionOnCommitCharacter": false
  },
  "intelephense.environment.includePaths": [".", ".stubs"],
  "intelephense.maxMemory": 4096,
  "intelephense.diagnostics.enable": false,
  "intelephense.analysis.excludePaths": [
    "vendor/**",
    "tests/**",
    "node_modules/**",
    "assets/**"
  ],
  "php.problems.exclude": [
    "**/includes/elementor-dynamic-tags/widgets/course-overview-widget.php",
    "**/includes/elementor-dynamic-tags/widgets/lesson-video-widget.php",
    "**/includes/elementor-dynamic-tags/widgets/lesson-progress-indicator-widget.php"
  ],
  "intelephense.stubs": [
    "elementor",
    "wordpress",
    "wordpress-globals",
    "woocommerce",
    "apache",
    "bcmath",
    "bz2",
    "calendar",
    "com_dotnet",
    "Core",
    "ctype",
    "curl",
    "date",
    "dba",
    "dom",
    "enchant",
    "exif",
    "FFI",
    "fileinfo",
    "filter",
    "fpm",
    "ftp",
    "gd",
    "gettext",
    "gmp",
    "hash",
    "iconv",
    "imap",
    "intl",
    "json",
    "ldap",
    "libxml",
    "mbstring",
    "meta",
    "mysqli",
    "oci8",
    "odbc",
    "openssl",
    "pcntl",
    "pcre",
    "PDO",
    "pdo_ibm",
    "pdo_mysql",
    "pdo_pgsql",
    "pdo_sqlite",
    "pgsql",
    "Phar",
    "posix",
    "pspell",
    "random",
    "readline",
    "Reflection",
    "session",
    "shmop",
    "SimpleXML",
    "snmp",
    "soap",
    "sockets",
    "sodium",
    "SPL",
    "sqlite3",
    "standard",
    "superglobals",
    "sysvmsg",
    "sysvsem",
    "sysvshm",
    "tidy",
    "tokenizer",
    "xml",
    "xmlreader",
    "xmlrpc",
    "xmlwriter",
    "xsl",
    "Zend OPcache",
    "zip",
    "zlib"
  ],
  "search.exclude": {
    "**/node_modules": true,
    "**/vendor": true,
    "**/.git": true
  },
  "editor.rulers": [80, 120],
  "editor.wordWrap": "on",
  "chat.tools.terminal.autoApprove": {
    "git init": true,
    "git add": true,
    "git commit": true,
    "git remote": true
  }
}

