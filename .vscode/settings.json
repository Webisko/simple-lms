{
  "github.copilot.enable": {
    "*": true,
    "plaintext": false
  },
  "[php]": {
    "editor.defaultFormatter": "esbenp.prettier-php",
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },
  "php.validate.enable": true,
  "php.suggest.basic": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/vendor": true,
    "**/.git": true
  },
  "editor.rulers": [80, 120],
"editor.wordWrap": "on",
"chat.tools.terminal.autoApprove": {
    "git init": true,
    "git add": true
}
}
