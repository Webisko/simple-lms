{
  "name": "simple-lms/plugin",
  "description": "Simple LMS WordPress plugin - development dependencies",
  "type": "project",
  "version": "1.3.3",
  "license": "proprietary",
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "brain/monkey": "^2.6",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "phpstan/phpstan": "^1.10",
    "szepeviktor/phpstan-wordpress": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "SimpleLMS\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "lint": "phpcs",
    "lint:fix": "phpcbf",
    "analyse": "phpstan analyse",
    "test": "php tests/run-simple-tests.php",
    "check": [
      "@lint",
      "@analyse",
      "@test"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
